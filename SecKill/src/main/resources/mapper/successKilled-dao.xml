    <insert id="insertSuccessSeckill" >
        insert into success_killed(seckill_id,user_phone,state)
        values (#{id},#{phone},0)
    </insert>
    <select id="queryByIdWithSeckill" resultType="org.seckill.entity.SuccessKilled">
